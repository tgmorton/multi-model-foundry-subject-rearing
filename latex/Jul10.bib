@article{Posner2004-my,
	abstract = {This reprinted article originally appeared in Information
               Processing and Cognition: The Loyola Symposium, (pp.55-85), 1975,
               Hillsdale, NJ: Lawrence Erlbaum Associates (see record
               1975-30974-000). To what extent are our conscious intentions and
