@misc{Nefdt2023-tj,
	abstract = {Abstract This book explores the philosophy of linguistics from
               the perspective of the philosophy of science. It adapts and
               develops a version of structural realism in order to address
               issues of linguistic structure, ontology, and scientific
               progress. The chief insight of the book is that languages are
               real patterns found in special kinds of biological systems.
               Importantly, many of the theories and achievements of Chomskyan
               generative grammar and biolinguistics can be retained within this
               new understanding of the field. Nevertheless, aspects of
               inferentialism, sociolinguistics and 4E cognition now deserve
               renewed attention within a theory of language. Methodologically,
               this makes linguistics a complexity science and opens up a world
               of resources and scientific approaches to the study of natural
               language. The philosophical account offered draws from
               theoretical linguistics, computational linguistics, the
               philosophies of science, mathematics, language, and cognitive
               science to bring forth a unified picture of a previously
               disparate discipline. This work will be especially useful to
               scholars interested in one of the most unique aspects of human
               nature, our ability to produce and understand language, and the
               science that studies it.},
	author = {Nefdt, Ryan M},
	language = {en},
	month = may,
	publisher = {Oxford University PressNew York},
	title = {Language, science, and structure: A journey into the philosophy of linguistics},
