@article{Wermelinger2023-ia,
	abstract = {Children imitate others for different reasons: To learn from
               others and to reach social goals such as affiliation or
               prosociality. So far, imitative acts have been measured using
               diverging methods in children and adults. Here, we investigated
               whether school-aged children's imitation can be measured via
               their automatic imitation with a classical imitation-inhibition
               task (Brass et al., 2000) as has been used in adults. To this
               end, we measured automatic imitation in N=94 7-8-year-olds and
               N=10 adults. The results were similar in children and adults:
               Observing actions that are incongruent with participants' actions
