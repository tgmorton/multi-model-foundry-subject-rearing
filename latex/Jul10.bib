@article{Shultz2001-tb,
	abstract = {A fundamental issue in cognitive science is whether human
               cognitive processing is better explained by symbolic rules or by
               subsymbolic neural networks. A recent study of infant
               familiarization to sentences in an artificial language seems to
               have produced data that can only be explained by symbolic rule
