@article{Kachergis2022-wz,
	abstract = {A standard model is a theoretical framework that synthesizes
               observables into a quantitative consensus. Have researchers made
               progress toward this kind of synthesis for children?s early
               language learning? Many computational models of early vocabulary
               learning assume that individual words are learned through an
               accumulation of environmental input. This assumption is also
