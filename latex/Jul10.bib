@inproceedings{Sun2016-dv,
	abstract = {Keystroke dynamics is an effective behavioral biometrics for user
               authentication at a computer terminal. Continuous or active
               authentication using keystroke dynamics has raised a lot of
               interest among researchers. However, there are only a few public
