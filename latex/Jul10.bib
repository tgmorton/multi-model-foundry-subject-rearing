@article{Simpson2002-hp,
	abstract = {This paper examines how information provided by tone sandhi
               provides potential insights into processes of movement. The paper
               focuses on the Taiwanese element kong (Mandarin shuo) 'say' which
               is grammaticalizing as a complementizer-type particle in an
               unexpected sentence-final position. Evidence from tone sandhi
