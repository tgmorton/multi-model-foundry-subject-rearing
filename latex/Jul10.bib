@article{Verbruggen2008-ak,
	abstract = {The stop-signal paradigm is a useful tool for the investigation of
              response inhibition. In this paradigm, subjects are instructed to
              respond as fast as possible to a stimulus unless a stop signal is
              presented after a variable delay. However, programming the
              stop-signal task is typically considered to be difficult. To
