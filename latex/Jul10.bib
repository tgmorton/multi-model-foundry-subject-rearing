@article{Yao2021-rs,
	abstract = {Despite their impressive performance in NLP, self-attention
                   networks were recently proved to be limited for processing
                   formal languages with hierarchical structure, such as
                   $\mathsf{Dyck}_k$, the language consisting of well-nested
                   parentheses of $k$ types. This suggested that natural
