@article{Kitchener2004-on,
	abstract = {Although numerous aspects of Bertrand Russell's philosophical
               views have been discussed, his views about the nature of the mind
               and the place of psychology within modem science have received
               less attention. In particular,there has been little discussion of
               what I will call ``Russell's flirtation with behaviorism.''
