@article{Rigler2015-ob,
	abstract = {This study investigated the developmental time course of spoken
              word recognition in older children using eye tracking to assess
              how the real-time processing dynamics of word recognition change
              over development. We found that 9-year-olds were slower to
              activate the target words and showed more early competition from
              competitor words than 16-year-olds; however, both age groups
              ultimately fixated targets to the same degree. This contrasts with
