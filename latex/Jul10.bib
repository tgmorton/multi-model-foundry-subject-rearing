@article{Jeannerod1984-dg,
	abstract = {Prehension movements were studied by film in 7 adult subjects.
               Transportation of the hand to the target-object location had
               features very similar to any aiming arm movement, that is, it
               involved a fast-velocity initial phase and a low-velocity final
