@article{Duan2024-io,
	abstract = {AbstractThe study of large language models (LLMs) and LLM-powered
               chatbots has gained significant attention in recent years, with
               researchers treating LLMs as participants in psychological
               experiments. To facilitate this research, we developed an R
               package called ``MacBehaviour ``
