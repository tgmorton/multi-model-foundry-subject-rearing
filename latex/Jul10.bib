	publisher = {Springer Science and Business Media LLC},
	title = {Time-dependent competition between goal-directed and habitual response preparation},
	volume = 3,
	year = 2019}

@article{Haith2018-mn,
	abstract = {When learning a new skill, even if we have been instructed
               exactly what to do, it is often necessary to practice for hours
               or even weeks before we achieve proficient and fluid performance.
               Practice has a multitude of effects on behavior, including
               increasing the speed of performance, rendering the practiced
               behavior habitual and reducing the cognitive load required to
               perform the task. These effects are often collectively referred
               to as automaticity. Here, we argue that these effects can be
               explained as multiple consequences of a single principle: caching
               of the outcome of frequently occuring computations. We further
               argue that, in the context of more complex task representations,
               caching different intermediate computations can give rise to more
               nuanced behavioral signatures, including dissociation between
               skill, habit and cognitive load.},
	author = {Haith, Adrian M and Krakauer, John W},
	journal = {Curr. Opin. Behav. Sci.},
	language = {en},
	month = apr,
	pages = {196--201},
	publisher = {Elsevier BV},
	title = {The multiple effects of practice: skill, habit and reduced cognitive load},
	volume = 20,
	year = 2018}

@article{Roelofs2008-kd,
	abstract = {This article reviews chronometric and neuroimaging evidence on
