@article{Wang2023-eh,
	abstract = {This study used an image-description paradigm with concurrent eye
               movement recordings to investigate differences of grammatical
               advance planning between young and older speakers in spoken
               sentence production. Participants were asked to produce sentences
               with simple or complex initial phrase structures (IPS) in
               Experiment 1 while producing individual words in Experiment 2.
