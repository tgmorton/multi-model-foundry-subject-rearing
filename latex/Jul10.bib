@article{Jianlong2025-ef,
	abstract = {Large language models (LLMs) have shown promise in formal
                   theorem proving, but their token-level processing often fails
                   to capture the inherent hierarchical nature of mathematical
                   proofs. We introduce \textbf{Hierarchical Attention}, a
                   regularization method that aligns LLMs' attention mechanisms
